<h1>Shopping!</h1>
<h2>Increase indicated items</h2>
<form action="<%= products_add_path %>">
	<input type="text" name="product" id="product" placeholder="Enter a product name">
	<input type="submit" value="add to cart">
</form>
<h2>Current cart contents clearly cataloged</h2>
<% cart.each do |item| %>
	<p><%= item %></p>
<% end %>